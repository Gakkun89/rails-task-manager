<%= form_for(@task) do |f| %>
  <div class="form-group w-50">
    <%= f.label :title%>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group  w-50">
    <%= f.label :details%>
    <%= f.text_field :details, class: "form-control"%>
  </div>
  <%= f.submit class: "btn btn-info" %>
<% end %>
